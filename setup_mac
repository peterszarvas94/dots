#!/bin/bash

# Install homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Install packages
brew tap homebrew/cask-fonts
brew install \
    stow \
    tmux \
    zsh \
    go \
    brave-browser \
    node \
    ghostty \
    bun-bin \
    opencode

# Remove
rm -rf ~/projects/dots

# Clone
mkdir -p ~/projects
cd projects
git clone https://github.com/peterszarvas94/dots.git
git clone https://github.com/peterszarvas94/omarchy-nvim-theme-grabber.git

# Origin
cd ~/projects/dots
git remote remove origin 2>/dev/null || true
git remote add origin git@github.com:peterszarvas94/dots.git

mkdir ~/work
mkdir ~/projects/go
mkdir ~/youtube

# Config packages 
./config --git --pkg=all --theme
