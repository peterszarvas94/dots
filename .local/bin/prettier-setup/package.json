{
  "name": "prettier-setup",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.0.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-sql": "^0.16.0",
    "prettier-plugin-tailwindcss": "^0.5.6"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-go-template",
      "prettier-plugin-sql"
    ],
    "overrides": [
      {
        "files": "*.svg",
        "options": {
          "parser": "html"
        }
      },
      {
        "files": "*.templ",
        "options": {
          "parser": "html"
        }
      },
      {
        "files": "*.html",
        "options": {
          "parser": "go-template"
        }
      },
      {
        "files": "*.sql",
        "options": {
          "parser": "sql"
        }
      },
      {
        "files": ["*.ts", "*.tsx", "*.typescript", "*.typescriptreact"],
        "options": {
          "parser": "typescript"
        }
      }
    ],
    "tabWidth": 2,
    "goTemplateBracketSpacing": false
  }
}

