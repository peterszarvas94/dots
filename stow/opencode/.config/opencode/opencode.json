{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "opencode/claude-sonnet-4",
  "mcp": {
    "rails": {
      "type": "local",
      "command": ["rails-mcp-server"],
      "enabled": true
    },
    "astro": {
      "type": "remote",
      "url": "https://mcp.docs.astro.build/mcp"
    },
    "omarchy": {
      "type": "local",
      "command": [
        "docker",
        "exec",
        "-i",
        "omarchy-mcp-server",
        "python",
        "/app/mcp_server/main.py"
      ]
    }
  }
}
