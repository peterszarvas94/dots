[
	{
		"context": "FileFinder",
		"bindings": {
			"cmd-p": "menu::SelectPrev",
			"cmd-n": "menu::SelectNext"
		}
	},
	{
		"context": "Editor && vim_mode == normal",
		"bindings": {
			"ctrl-c": ["vim::SwitchMode", "Normal"],
			"j": ["vim::Down", { "displayLines": true }],
			"k": ["vim::Up", { "displayLines": true }],
			"space i": "editor::ToggleCodeActions",
			"space s r": "tab_switcher::Toggle",
			"space s f": "file_finder::Toggle",
			"space t r": "editor::ToggleRelativeLineNumbers",
			"space r": "editor::Rename",
			"space f": "editor::Format",
			"space g b": "editor::ToggleGitBlame",
			"space g d": "editor::ToggleHunkDiff"
		}
	},
	{
		"context": "BufferSearchBar",
		"bindings": {
			"ctrl-c": "buffer_search::Dismiss"
		}
	},
	{
		"context": "Editor && showing_completions",
		"bindings": {
			"ctrl-y": "editor::ConfirmCompletion"
		}
	},
	{
		"context": "TabSwitcher",
		"bindings": {
			"k": "menu::SelectPrev",
			"j": "menu::SelectNext",
			"x": "tab_switcher::CloseSelectedItem"
		}
	}
]
