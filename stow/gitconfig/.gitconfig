[core]
  editor = nvim
  filemode = false
  autoclrf = true

[alias]
  st = status
  cm = commit
  ca = commit --amend
  lg = log --decorate --graph --oneline
  br = branch
  bd = branch -D
  bm = branch -M
  ch = checkout
  cb = checkout -b
  wt = worktree

[init]
  defaultBranch = main

[merge]
  tool = nvimdiff

[includeIf "gitdir:~/projects/"]
  path = ~/projects/dots/git_personas/personal/.gitconfig

[includeIf "gitdir:~/projects/"]
  path = ~/projects/dots/git_personas/personal/.gitSign

[includeIf "gitdir:~/work/"]
  path = ~/projects/dots/git_personas/work/.gitconfig
