[core]
  editor = nvim
  filemode = false
  autoclrf = true

[alias]
  st = status
  cm = commit
  ca = commit --amend
  lg = log --decorate --graph --oneline
  br = branch
  bd = branch -D
  bm = branch -M
  ch = checkout
  cb = checkout -b
  wt = worktree

[pull]
  rebase = true

[init]
  defaultBranch = master

[merge]
  tool = nvimdiff

[mergetool "nvimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE" "$MERGED" \
    -c 'set wrap' -c 'wincmd w' \
    -c 'set wrap' -c 'wincmd w' \
    -c 'set wrap' -c 'wincmd J'
  trustExitCode = false

[difftool]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE" -c 'set wrap' -c 'wincmd w' -c 'set wrap'
  trustExitCode = false

# personal
[includeIf "gitdir:~/projects/"]
  path = ~/.config/git/personal/config

# work
[includeIf "gitdir:~/work/"]
  path = ~/.config/git/work/config
